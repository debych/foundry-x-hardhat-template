{
  "name": "foundry-x-hardhat-template",
  "version": "0.1.0",
  "description": "A template project containing different configs for Foundry and Hardhat working along",
  "engines": {
    "node": ">= 12.18.0"
  },
  "author": "Debych",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "template",
    "hardhat",
    "solidity"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "prepare:husky": "husky install",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "compile": "make build",
    "test": "make test",
    "coverage": "make coverage",
    "abi:generate": "make clean && hardhat compile && hardhat diamondABI",
    "typechain": "make clean && forge build --skip script --skip test --skip Base --skip Test && typechain --target ethers-v5 'out/**/*.json' --out-dir typechain"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "dotenv": "^16.1.4",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "hardhat": "^2.14.1",
    "hardhat-preprocessor": "^0.1.5",
    "husky": "^8.0.3",
    "patch-package": "^7.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.1.3"
  }
}
